<Window
    x:Class="DocTransform.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- 全局背景 - 启用Acrylic效果 -->
        
        <!-- 自定义标题栏 -->
        <Grid x:Name="CustomTitleBar"
              Height="48"
              VerticalAlignment="Top"
              Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 应用图标 - 使用项目目录中的ico文件 -->
            <Image Grid.Column="0" 
                   Source="/Assets/AppIcon.png" 
                   Width="28" 
                   Height="28" 
                   Margin="12,0,8,0" 
                   VerticalAlignment="Center"/>

            <!-- 标题文字 -->
            <TextBlock Grid.Column="1"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                       Text="Excel到Word数据映射工具" />

            
            <!-- 最小化按钮 -->
            <!--<Button Grid.Column="2"
                    Click="MinimizeButton_Click"
                    ToolTipService.ToolTip="最小化"
                    Margin="4,0"
                    Width="46"
                    Height="32"
                    Background="Transparent"
                    BorderBrush="Transparent">
                <FontIcon Glyph="&#xE921;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
            </Button>-->

            <!-- 最大化/还原按钮 -->
            <!--<Button Grid.Column="3"
                    Click="MaximizeButton_Click"
                    ToolTipService.ToolTip="最大化/还原"
                    Margin="4,0"
                    Width="46"
                    Height="32"
                    Background="Transparent"
                    BorderBrush="Transparent">
                <FontIcon Glyph="&#xE922;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
            </Button>-->

            <!-- 关闭按钮 -->
            <!--<Button Grid.Column="4"
                    Click="CloseButton_Click"
                    ToolTipService.ToolTip="关闭"
                    Margin="4,0"
                    Width="46"
                    Height="32"
                    Background="Transparent"
                    BorderBrush="Transparent">
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#E81123"/>
                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                </Button.Resources>
                <FontIcon Glyph="&#xE8BB;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
            </Button>-->
        </Grid>

        <!-- 主内容区域 -->
        <Grid x:Name="RootGrid" 
              Margin="0,48,0,0"
              AllowDrop="True" 
              DragOver="RootGrid_DragOver" 
              Drop="RootGrid_Drop">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 临时内容 - 显示应用已启动 -->
            <StackPanel Grid.Row="0" 
                       Margin="20" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <TextBlock Text="应用已成功启动！" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>
                <TextBlock Text="请将Excel或Word文件拖拽到此处进行处理" 
                          FontSize="16" 
                          HorizontalAlignment="Center"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- 占位区域用于拖拽 -->
            <Border Grid.Row="1" 
                    Margin="20" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="2" 
                    CornerRadius="8">
                
                <TextBlock Text="拖拽文件到此处" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          FontSize="18"
                          Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
            </Border>
        </Grid>
    </Grid>
</Window>
